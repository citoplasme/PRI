extends layout
block content
    .w3-container
    <div class="w3-content" style="max-width:1600px">
        header.w3-container.w3-center.w3-padding-48.w3-black
            h1.w3-xxxlarge Novo Aluno
    </div>
        .w3-container
                form.w3-container(action='/alunos' method='POST' id='form1')
                    label
                        b Identificador 
                    input.w3-input.w3-border.w3-light-grey(type='text' name='identificador')
                    label
                        b Nome 
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
                    label
                        b Curso 
                    input.w3-input.w3-border.w3-light-grey(type='text' name='curso')
                    input.w3-button.w3-round-xlarge.w3-right.w3-blue-grey(type='submit' value='Enviar')
        <div class="w3-content" style="max-width:1600px">
            header.w3-container.w3-center.w3-padding-48.w3-black
                h1.w3-xxxlarge Alunos
        </div>
        .w3-container
            table.w3-table-all.w3-hoverable
                tr  
                    th Identificador
                    th Nome
                    th Curso
                    th Visualizar
                    th Eliminar
                each a in lista
                    tr
                        td= a.identificador
                        td= a.nome
                        td= a.curso
                        td  
                            form.form-inline(method="get" action=`/alunos/${a.identificador}`)
                                button.w3-button.w3-round-xlarge.w3-blue-grey(type="submit") View
                        td    
                            button.w3-button.w3-round-xlarge.w3-red(onclick="removeAluno('" + a.identificador + "')") Delete  
    .w3-container.w3-black
        <h3 align=center> Powered by: <a href="https://www.w3schools.com">w3.css</a></h3>                    