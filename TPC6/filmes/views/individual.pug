extends layout
block content
    <div class="w3-content" style="max-width:1600px">
        header.w3-container.w3-center.w3-padding-48.w3-black
            h1.w3-xxxlarge= item.title
            h6 
                span.w3-tag.w3-white
                    b= item.year
    </div>
    .w3-container
        p <b>Identificador: </b> 
            =item._id
        table.w3-table-all.w3-hoverable
            tr  
                th Elenco
            each a in item.cast
                tr
                    td= a
        hr
        table.w3-table-all.w3-hoverable
            tr  
                th Categorias
            each b in item.genres
                tr
                    td= b
